<!--miniprogram/custom-tab-bar/index.wxml-->
<cover-view class="tab-bar">
	<cover-view class="tab-bar-border"></cover-view>
	<!-- 推出左侧空白 -->
	<cover-view style="width: 20px;"></cover-view>

	<cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}"
	 bindtap="switchTab">
		<cover-view wx:if="{{item.isSpecial}}">{{rotateStatus}}
			<cover-view class="midbutton" bindtap="rotate">
				<cover-image class=" {{ rotateStatus  ? 'midIconBack' : 'midIcon '}}" style="width: 24px;height: 24px;margin: 16px 16px;transition: all 1000ms linear 200ms; transform: {{ rotateStatus == true ? 'rotate(-45deg)' : ''}};" 
				src="../static/icon/plus_tab.png"></cover-image>
			</cover-view>
		</cover-view>
	 
		<cover-view wx:else>
			<!-- 选中添加橙色背景 -->
			<cover-view wx:if="{{selected == index}}" class="iconBackground">
				<cover-image src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
			</cover-view>
			<!-- 未选中取消橙色背景 -->
			<cover-image wx:if="{{selected !== index}}" src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
			<!-- 标签页文字 -->
			<cover-view wx:if="{{selected !== index}}" class="tabbarFont" style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</cover-view>
		</cover-view>
	</cover-view>

	<!-- 推出右侧空白 -->
	<cover-view style="width: 20px;"></cover-view>
</cover-view>
