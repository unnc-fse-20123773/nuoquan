
.defaultPicker {
	position: relative;
	height: 100px;
	width: 70px;
	overflow: hidden;
	box-shadow: 0px 0px 10px 1px #A6A6A6;
	background-color: white;
	z-index: 0;
	border-radius: 15rpx;
}
.editingPicker {
	height: 18px;
}
picker-view {
	display: inline-block;
	position: relative;
	height: 600rpx;
	width: calc(100% - 25px);
	height: 180px;
	top: -81px;
}
.arrow {
	display: inline-block;
	width: 25px;
	height: 25px;
	position: absolute;
	top: -4px;
	right: 0;
}
.selectedPicker {
	text-align: right;
	font-size: 17px;
	height: 18px;
	line-height: 18px;
	color: #000000;
	font-weight: 800;
}
.item {
	text-align: right;
	width: 32px;
	height: 18px;
	font-size: 14px;
	font-weight: 800;
}

