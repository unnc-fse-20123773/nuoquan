
.articlecard {
	position: relative;
	color: #ffffff;
	width: 650rpx;
	background-color: #313131;
	margin: auto;
	border-radius: 8px 8px 0 0;
}
.star {
	display: inline-block;
	width: 14px;
	height: 14px;
	color: #ffffff;
	margin-left: 13px;
}
.content::after {
	content: '';
	width: 100%;
	height: 10px;
	position: absolute;
	left: 0;
	bottom: 0;
	border-radius: 50% 50% 0 0;
	background: #000000;
}
.user {
	margin: 16px 25px 0 25px;
	font-size: 15px;
	font: MicrosoftYaHei;
	font-weight: bold;
	line-height: 19px;
	margin: 16px 13px 0 15px;
	display: inline-block;
}
.content {
	margin: 10px 13px 0 15px;
	font-size: 13px;
	line-height: 15px;
	padding-bottom: 31px;
}
.menubar {
	position: relative;
	vertical-align: middle;
	border-radius: 0 0 8px 8px;
	width: 630rpx;
	height: 13px;
	margin: auto;
	padding-bottom: 5px;
	background: #585858;
	vertical-align: top;
}
.menubar::after {
	content: '';
	width: 100%;
	height: 10px;
	position: absolute;
	left: 0;
	top: -10px;
	border-radius: 53.65% 50% 0 0;
	background: #585858;
	margin-bottom: 20px;
}
.time {
	display: inline-block;
	left: 120px;
	font-size: 10px;
	margin-left: 25px;
	color: #888888;
	vertical-align: top;
}
.icons {
	position: absolute;
	right: 0;
	top: 0;
	height: 13px;
	width: 206rpx;
	text-align: right;
	display: inline-block;
	content-flex: right;
	overflow: hidden;
	border-bottom-right-radius: 8px;
}
.icons image {
	width: 11px;
	height: 11px;
	padding-right: 10px;
	color: #ffffff;
	vertical-align: top;
}
image {
	width: 30%;
	height: 200rpx;
	margin: auto;
}

