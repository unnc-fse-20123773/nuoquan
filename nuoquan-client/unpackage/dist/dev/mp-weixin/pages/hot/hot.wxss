
page{
		background: #F8F8F8;
		position:relative;
}
.top {
		width:100%;
		height:40px;
		display:-webkit-box;
		display:-webkit-flex;
		display:flex;
		-webkit-box-align:center;
		-webkit-align-items:center;
		        align-items:center;
		position:static;
}
.topleft{
		font-size:14px;
		margin-left:30px;
		margin-right:15%;
		height: 20px;
}
.mainbody{
	width:calc(100% - 26px);
	margin: auto;
}
.topright {
		display:inline-block;
		position:absolute;
		right:10px;
		width: 60px;
		height: 20px;
		line-height:15px;
		background-color: #FFCF3C;
		border-width: 1rpx;
		border-radius: 10rpx;
}
.refresh{
		font-size:13px;
		color: white;
}


