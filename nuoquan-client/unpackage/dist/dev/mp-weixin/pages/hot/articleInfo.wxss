
.oneArticle {
		width: 100%;
		position:relative;
}
.title {
		font-size: 15px;
		color: #4A4A4A;
		margin-top: 10px;
		padding-top: 10px;
		white-space: nowrap;
		overflow: hidden;
		-o-text-overflow: ellipsis;
		   text-overflow: ellipsis;
}
.cardBody {
		position: relative;
		width: 100%;
		/* height:83px; */
		padding-top:10px;
}
.picArea {
		position: absolute;
		right: 10px;
		top: -10px;
		width: 61px;
		height: 61px;
}
.left-body {
		width: 100%;
		height: 70px;
}
.leftBodyWithPic {
		width: calc(100% - 73px);
}
.content {
		height: 40px;
		width: 70%;
		font-size: 12px;
		line-height: 13px;
		overflow: hidden;
		-o-text-overflow: ellipsis;
		   text-overflow: ellipsis;
}
.bottomBar {
		width: 100%;
		height: 15px;
		margin-bottom:15px;
		color:#9B9B9B;
}
.time {
		width: 85px;
		/* 暂时,到  月-日 时:分*/
		height: 10px;
		line-height: 10px;
		font-size: 10px;
		position: absolute;
		left: 5px;
		bottom: 12px;
}
.comment {
		position: absolute;
		bottom: 12px; /* bottom, 对于comment time like view ,数值应等于menu-area的padding-bottom: ; */
		right: 40px;
		width: 25px;
		height: 10px;
		line-height: 10px;
}
.like {
		position: absolute;
		bottom: 12px;
		right: 1px;
		width: 25px;
		height: 10px;
		line-height: 10px;
}
.view {
    	position: absolute;
    	bottom: 12px;
    	right: 79px;
    	width: 25px;
    	height: 11px;
}
.comment image,.like image,.view image {
		width: 11px;
		height: 11px;
		right:14px;
		position: absolute;
}
.like view,
	.comment view,
	.view view {
		position: absolute;
		right: 0;
		bottom: 0;
		font-size: 8px;
		width: 9px;
		display: inline-block;
}


