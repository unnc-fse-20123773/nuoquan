
page {
	width: 100%;
	height: 100%;
}
button::after {
	border: none;
	outline: none;
}

/* 按百分比分配父组件区域 */

/* 如更改样式需重新计算百分比分配 */
#signin-container {
	width: 100%;
	height: 100%;
	position: relative;
}
#icon {
	position: absolute;
	top: 4%;
	width: 100%;
	height: 16%;
}
.icon-logoBox {
	height: 80px;
	width: 80px;
	-webkit-box-shadow: 0px 0px 10px 1px #CCCCCC;
	        box-shadow: 0px 0px 10px 1px #CCCCCC;
	border-radius: 30rpx;
}
.icon-logo {
	height: 70px;
	width: 70px;
}
#introduction {
	position: absolute;
	top: 20%;
	width: 100%;
	height: 40%;
}
.introduction-contentBox {
	width: 70%;
	height: 90%;
	background-color: #EEEEEE;
	opacity: 0.5;
	border-radius: 30rpx;
}
.introduction-content {
	width: 90%;
	height: 90%;
	background-color: #09BB07;
}
.introduction-content .introduction-text{
	width: 100%;
}
#confirm {
	position: absolute;
	top: 62%;
	width: 100%;
	height: 10%;
}
.confirm-rel {
	position: relative;
	width: 100%;
	height: 100%;
}
.confirm-button {
	position: absolute;
	top: 24%;
	left: 26%;
	width: 48%;
	height: 52%;
	border-radius: 10rpx;
	background-color: #FFCD2E;
	z-index: 20;
}
.conform-bgBox {
	position: absolute;
	top: 24%;
	left: 26%;
	width: 48%;
	height: 52%;
	background-color: #ffcd2e;
	border-radius: 10rpx;
	z-index: 10;
}
.bottom-picBox {
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 26%;
}

