<view class="comments-area" style="{{'opacity:'+(mainCommentList.length!=undefined?1:0)+';'}}"><view class="comments-menu"><view class="comments-num">{{mainCommentList.length+"条评论"}}</view><view class="comments-order"></view></view><view class="comments"><block wx:for="{{mainCommentList}}" wx:for-item="mainComment" wx:for-index="__i0__" wx:key="id"><block><view class="comment"><view class="comment-info"><image src="{{mainComment.faceImg}}" data-event-opts="{{[['tap',[['goToPersonPublic',['$0'],[[['mainCommentList','id',mainComment.id,'fromUserId']]]]]]]}}" bindtap="__e"></image><view class="name_text">{{mainComment.nickname}}</view><view class="time_text">{{mainComment.timeAgo}}</view></view><view data-event-opts="{{[['tap',[['controlInputInComment',['inComment']]]]]}}" class="comment-content" bindtap="__e">{{mainComment.comment}}</view><view class="comment-menu"><view class="son-comment-num">{{mainComment.commentNum}}</view><view data-event-opts="{{[['tap',[['swLikeMainComment',['$0'],[[['mainCommentList','id',mainComment.id]]]]]]]}}" class="{{['like-num',(mainComment.isLike)?'liked':'']}}" bindtap="__e">{{mainComment.likeNum}}</view></view></view></block></block></view></view>